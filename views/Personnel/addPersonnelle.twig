        <div id="main">
            <div class="inner">
                <section>
                    <h2>Add staff</h2>
                    <form id="formulaire">
                        <div class="fields">
                            <div class="field half">
                                <input type="text" name="nom" id="nom" placeholder="First Name" />
                            </div>

                            <div class="field half">
                                <input type="text" name="prenom" id="prenom" placeholder="Last Name" />
                            </div>

                            <div class="field half">
                                <input type="text" name="age" id="age" placeholder="Age" />
                            </div>

                            <div class="field quarter">
                                <input type="text" name="fonction" id="fonction" placeholder="Fonction" />
                            </div>

                            <div class="field quarter">
                                <input type="text" name="salaire" id="salaire" placeholder="Salary" />
                            </div>


                            <div class="field quarter">
                                <input type="date" name="dateDebutContrat" id="dateDebutContrat" placeholder="Contract start date" />
                            </div>

