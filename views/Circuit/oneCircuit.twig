<script>
    function deleteOne (id){
        $.ajax({
            type: 'delete',
            url: "http://localhost:3000/circuit/deleteOne/"+id,
            dataType: 'json',
            async: false,
            success: (result) => {
            }
        })
        location.href="http://localhost:3000/circuit/all"
    }
    function updateone(id){
        $.ajax({
            type: 'put',
            url: "http://localhost:3000/circuit/updateone/"+id,
            data:{
                longeur: $('#longeur').val(),
                duree: $('#duree').val()
            },
            dataType: 'json',
            async: false,
            success: (result) => {
                location.href="http://localhost:3000/circuit/all"
            }
        })
        location.reload()
    }

</script>
