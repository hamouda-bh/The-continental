        <div id="main">
            <div class="inner">
                <section>
                    <h2>Ajouter un circuit</h2>
                    <form id="formulaire">
                        <div class="fields">
                            <div class="field half">
                                <input type="text" name="nom" id="nom" placeholder="Nom circuit" />
                            </div>

                            <div class="field half">
                                <input type="text" name="depart" id="depart" placeholder="Depart" />
                            </div>

                            <div class="field half">
                                <input type="text" name="arrive" id="arrive" placeholder="Arrive" />
                            </div>

                            <div class="field quarter">
                                <input type="text" name="longeur" id="longeur" placeholder="Longeur" />
                            </div>

                            <div class="field quarter">
                                <input type="text" name="duree" id="duree" placeholder="Duree" />
                            </div>

                            <div class="field text-right">
                                <label>&nbsp;</label>

                                <ul class="actions">
                                    <li>
                                        <button type="submit" class="btn btn-outline-primary" onclick=create()>create</button>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </form>
                </section>


                <ul class="copyright">
